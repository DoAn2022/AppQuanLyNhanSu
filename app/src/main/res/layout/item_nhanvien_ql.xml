<!-- res/layout/item_nhanvien_ql.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#3BBEBC"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_itemnvql_TenNhanVien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên Nhân Viên"
        android:textSize="18sp"
        android:textColor="#000000"
        android:drawableLeft="@drawable/icon_profile"
        android:drawablePadding="10dp"/>

    <TextView
        android:id="@+id/text_itemnvql_PhongBan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phòng Ban"
        android:layout_below="@id/text_itemnvql_TenNhanVien"
        android:layout_marginTop="4dp"
        android:textColor="#666666"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/text_itemnvql_PhongBan"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btn_itemnvql_Xem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem Chi Tiết"
            android:textColor="#00796B"
            android:backgroundTint="#FBC02D"/>

        <Button
            android:id="@+id/btn_itemnvql_Xoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa"
            android:textColor="#303F9F"
            android:layout_marginStart="16dp"
            android:backgroundTint="#D32F2F"/>
    </LinearLayout>

</RelativeLayout>
