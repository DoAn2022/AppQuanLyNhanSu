<!-- res/layout/item_nhanvien_ql.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/textTenNhanVien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên Nhân Viên"
        android:textSize="18sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/textPhongBan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phòng Ban"
        android:layout_below="@id/textTenNhanVien"
        android:layout_marginTop="4dp"
        android:textColor="#666666"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/textPhongBan"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/buttonXem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem Chi Tiết"
            android:textColor="#E83A3A"
            android:backgroundTint="#2ACCCC"/>

        <Button
            android:id="@+id/buttonXoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa"
            android:textColor="#FBC02D"
            android:layout_marginStart="16dp"
            android:backgroundTint="#FF0000"/>
    </LinearLayout>

</RelativeLayout>
