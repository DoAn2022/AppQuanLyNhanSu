<!-- res/layout/item_chamcong_ql.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#76BDE3"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_itemccql_PhongBan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phòng Ban"
        android:layout_below="@id/text_itemccql_TenNhanVien"
        android:layout_marginTop="4dp"
        android:textColor="#666666"/>

    <Button
        android:id="@+id/btn_itemccql_Xem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_itemccql_PhongBan"
        android:layout_marginStart="-61dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@id/text_itemccql_PhongBan"
        android:backgroundTint="#31E112"
        android:text="Xem Chi Tiết"
        android:textColor="#E83A3A" />

    <TextView
        android:id="@+id/text_itemccql_TenNhanVien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_calender"
        android:drawablePadding="10dp"
        android:text="Tên Nhân Viên"
        android:textColor="#000000"
        android:textSize="18sp" />

</RelativeLayout>
