<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Activity.QuanLy.TrangChuQL_Activity">

    <!-- Ảnh công ty và Tên công ty -->
    <ImageView
        android:id="@+id/imageViewtcql_Logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textViewtcql_tencty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DH Fast Global"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#E83A3A"
        android:layout_below="@id/imageViewtcql_Logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <!-- Danh sách các nút bấm -->
    <Button
        android:id="@+id/btn_tcql_qlnv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#D94D4D"
        android:backgroundTint="#2ACCCC"
        android:textStyle="bold"
        android:text="QUẢN LÝ NHÂN VIÊN"
        android:layout_below="@id/textViewtcql_tencty"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_tcql_qlcc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#E83A3A"
        android:backgroundTint="#2ACCCC"
        android:textStyle="bold"
        android:text="QUẢN LÝ CHẤM CÔNG"
        android:layout_below="@id/btn_tcql_qlnv"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn_tcql_qll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#E83A3A"
        android:backgroundTint="#2ACCCC"
        android:textStyle="bold"
        android:text="QUẢN LÝ LƯƠNG"
        android:layout_below="@id/btn_tcql_qlcc"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn_tcql_tnv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#E83A3A"
        android:backgroundTint="#2ACCCC"
        android:textStyle="bold"
        android:text="THÊM NHÂN VIÊN"
        android:layout_below="@id/btn_tcql_qll"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn_tcql_dx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F5CC00"
        android:backgroundTint="#689F38"
        android:textStyle="bold"
        android:text="Đăng xuất"
        android:layout_below="@id/btn_tcql_tnv"
        android:layout_marginTop="8dp"/>

</RelativeLayout>